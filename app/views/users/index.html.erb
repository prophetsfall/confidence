<% if current_user %>
<h2 class="welcomeHeader">Welcome <%=current_user.first_name%></h2>
    <% @memberships.each do |membership| %>
    <div class="row small-6 small-offset-3 medium-8 medium-offset-2 large-10 columns large-offset-2 leagueLink">
    <span class="columns small-6 medium-6 large-6"> <%=link_to "#{ membership.league.league_name}", league_path(membership.league)%></span>
      <span class="columns small-3  weeklyScore"><%="Score for week #{Week.current_week.week_number}: "%>
      <%= Membership.weekly_score(membership.user_id, membership.league_id,Week.current_week) %></span>
       <span class="columns small-3 yearToDateScore"><%= "Score for #{Week.current_week.year}: #{membership.score}" %></span>
    </div>
    <% end %>
    <div class="row">
      <div class="leagueLinks small-6 small-offset-3 medium-8 medium-offset-2 large-10 columns large-offset-2 ">
        <div class="publicLink"><%= link_to "Click here to see available leagues!", leagues_path%></div>
        <div class="privateLink"><%= link_to "Click here to create a custom league!", new_league_path%></div>
      </div>
    </div>
<% else %>
  <h2 class ="welcomeHeader"> Welcome to NFL Confidence Pool! </h2>
  <div class="row">
  <p class = "small-8 small-offset-2 large-10  columns introBlub">
    Each week you pick the winners of all games on the NFL schedule.<br> You'll then assign a confidence score to each game.<br>
    Pick the winner correctly, gain that many points.<br> Otherwise you lose that many points.
    <br><br>
    Register and join or create a league to get started!
  </p>
</div>

<% end %>
